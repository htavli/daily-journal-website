<%- include("partials/header") -%>

    <h1>Compose</h1>

    <form method="POST" action="/compose">
        <div class="form-group">
            <label for="title">Title</label>
            <input class="composeInput form-control" id="title" type="text" autocomplete="off" name="title" value="Day <%=day%>">
        </div>
        <div class="form-group">
            <label for="post">Post</label>
            <textarea class="composeInput form-control" id="post" autocomplete="off" name="post" rows="10"></textarea>
        </div>
        <button class="btn btn-primary" type="submit">Publish</button>
    </form>

    <%- include("partials/footer") -%>